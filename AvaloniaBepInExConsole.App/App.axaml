<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Sigurd.AvaloniaBepInExConsole.App.App"
             xmlns:app="clr-namespace:Sigurd.AvaloniaBepInExConsole.App"
             RequestedThemeVariant="Dark">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <app:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://Avalonia.Controls.TreeDataGrid/Themes/Fluent.axaml"/>
    </Application.Styles>

    <Application.Resources>
        <FontFamily x:Key="JetBrainsMonoFont">avares://AvaloniaBepInExConsole.App/Assets/Fonts/JetBrainsMono#JetBrains Mono NL</FontFamily>
    </Application.Resources>
</Application>
